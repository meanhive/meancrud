doctype html
html
    head
        title="Product CRUD"
        link(href="https://bootswatch.com/3/flatly/bootstrap.min.css",type="text/css",rel="stylesheet")
        meta(name="viewport",content="width=device-width,initial-scale=-1")
        script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js")
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js")
    body
        nav.navbar.navbar-inverse
            .container
                .navbar-header
                    a(class="navbar-brand", href="/") Product CRUD
                    button(class="navbar-toggle",data-target="#myMenu",data-toggle="toggle")
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                div(class="collapse navbar-collapse", id="myMenu")
                    ul.nav.navbar-nav
                        li
                            a(href="/") Products
                        li
                            a(href="/create") Create

        .container 
            .row
                .col-md-12.col-sm-12.jumbotron.text-center
                    h1="Create Product"
            .row
                .col-md-6.col-md-offset-3.well
                    form(action="/create",method="POST",autocomplete="off")
                        .form-group
                            label="Title"
                            input(type="text",class="form-control",name="title",placeholder="Enter title",required)
                        .form-group
                            label="Price"
                            input(type="number",class="form-control",name="price",placeholder="Enter price",required)
                        .form-group
                            label="Image"
                            input(type="url",class="form-control",name="image",placeholder="Enter Image Url",required)
                        .form-group
                            label="Company"
                            input(type="text",class="form-control",name="company",placeholder="Enter Company",required)
                        .form-group
                            label="Description"
                            input(type="text",class="form-control",name="description",placeholder="Enter Desc",required)
                        .form-group
                            input(type="submit",class="btn btn-info",value="Create")
                            input(type="reset",class="btn btn-warning pull-right",value="Clear")